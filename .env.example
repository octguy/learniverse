# ==================================
# Database Configuration
# ==================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/learniverse
SPRING_DATASOURCE_USERNAME=learniverse_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# ==================================
# JWT Configuration
# ==================================
# Generate a secure random string (e.g., using: openssl rand -base64 32)
SPRING_JWT_SECRET_KEY=your_jwt_secret_key_at_least_256_bits_long_base64_encoded
# Access token expiration in milliseconds (e.g., 3600000 = 1 hour)
SPRING_JWT_SECRET_KEY_EXPIRATION=3600000

# ==================================
# Token Expiration Times (in milliseconds)
# ==================================
# Refresh token: 7 days = 604800000 ms
REFRESH_TOKEN_EXPIRATION=604800000
# Reset password token: 15 minutes = 900000 ms
RESET_PASSWORD_TOKEN_EXPIRATION=900000
# Verification code: 5 minutes = 300000 ms
VERIFICATION_CODE_EXPIRATION=300000

# ==================================
# Email Configuration (Gmail)
# ==================================
# Your Gmail address for sending system emails
SUPPORT_EMAIL=your-email@gmail.com
# Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
APP_PASSWORD=your_gmail_app_password

# ==================================
# Cloudinary Configuration
# ==================================
# Get these from: https://cloudinary.com/console
CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=learniverse

# ==================================
# Frontend Configuration
# ==================================
# URL where your frontend is hosted
# For local development with Docker: http://localhost:8386
# For production: https://your-domain.com
FRONTEND_URL=http://localhost:8386

# ==================================
# Frontend API URL (for Next.js build)
# ==================================
# URL for the backend API (used during frontend build)
# For local development: http://localhost:8080/api/v1
# For production: https://your-backend-domain.com/api/v1
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# ==================================
# AI Service Configuration
# ==================================
# URL for the comment scanning AI service
# For Docker: http://learniverse-commentscan:8000
# For local development: http://localhost:8000
AI_SERVICE_URL=http://learniverse-commentscan:8000
